<formLayout xmlns="http://polarion.com/schema/WorkItems/FormLayout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://polarion.com/schema/WorkItems/FormLayout">
    <horizontal>
        <vertical>
            <section>
                <field id="type" />
                <field id="project" />
                <field id="status" readOnly="true" />
            </section>
        </vertical>
    </horizontal>

    <field id="description" />
    <panel description="Generic Capella Fields">
        <field id="uuid_capella" readOnly="true" />
        <field id="parent" readOnly="true" />
        <field id="parent_reverse" readOnly="true" />
    </panel>
    <panel description="Custom Capella Fields">
        <field id="@allCustomFields,-owner,-sortOrder,-manualQuality,-qualitySuspect,-automatics,-language,-capellaId,-uuid_capella,-checksum,-parent,-parent_reverse,-assumption,-availability,-computation,-legal,-performance,-rationale,-reliability,-safety,-security,-standards,-context_diagram,-tree_view" readOnly="true" />
        <field id="context_diagram" readOnly="true" />
        <field id="tree_view" readOnly="true" />
    </panel>
    <panel description="Requirement Fields">
        <field id="assumption" readOnly="true" />
        <field id="availability" readOnly="true" />
        <field id="computation" readOnly="true" />
        <field id="legal" readOnly="true" />
        <field id="performance" readOnly="true" />
        <field id="rationale" readOnly="true" />
        <field id="reliability" readOnly="true" />
        <field id="safety" readOnly="true" />
        <field id="security" readOnly="true" />
        <field id="standards" readOnly="true" />
    </panel>
    <field id="comments" />
    <field id="linkedWorkItems" />
    <field id="hyperlinks" />
</formLayout>
