<formLayout xmlns="http://polarion.com/schema/WorkItems/FormLayout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://polarion.com/schema/WorkItems/FormLayout">
    <horizontal>
        <vertical>
            <section>
                <field id="type" />
                <field id="project" />
                <field id="language" />
            </section>
        </vertical>
        <vertical>
            <section>
                <field id="assignee" />
                <field id="status" />
                <field id="resolution" />
            </section>
        </vertical>
        <vertical>
            <section>
                <field id="capellaId" />
                <field id="classification" />
                <field id="perspective" />
                <field id="scope" />
            </section>
        </vertical>
    </horizontal>

    <field id="description" />

    <panel description="Custom Fields">
        <field
            id="@allCustomFields,-owner,-sortOrder,-manualQuality,-qualitySuspect,-automatics,-language,-capellaId,-classification,-perspective,-scope" />
    </panel>

    <field id="comments" />
    <field id="approvals" />
    <field id="linkedWorkItems" />
    <field id="hyperlinks" />
    <field id="watches" />
</formLayout>
